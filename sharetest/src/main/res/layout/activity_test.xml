<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin" >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:id="@+id/infoText"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:gravity="bottom" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/linearLayout"
        android:layout_toStartOf="@+id/createGroupBtn"
        android:layout_below="@+id/createGroupBtn"
        android:layout_alignParentEnd="true"
        android:layout_above="@+id/infoText">

        <ListView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/deviceList"
            android:layout_alignParentBottom="true"
            android:layout_toEndOf="@+id/createGroupBtn"
            android:layout_marginBottom="0dp" />
        
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="package size:"/>

            <EditText
                android:id="@+id/packSizeEdit"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="#eee"
                android:hint="package size"
                android:text="1"
                android:textSize="15dp"/>
            
        </LinearLayout>
        
        <!--
        <ListView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/wifiList"
            android:layout_alignParentBottom="true"
            android:layout_toEndOf="@+id/createGroupBtn"
            android:layout_marginBottom="0dp" />
        -->
    </LinearLayout>

    <Button
        android:text="Discover"
        android:textSize="12sp"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:id="@+id/discoverBtn"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Create Group"
        android:textSize="12sp"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:id="@+id/createGroupBtn"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/discoverBtn" />

    <Button
        android:text="Pub"
        android:textSize="12sp"
        android:layout_width="80dp"
        android:layout_height="45dp"
        android:id="@+id/pubBtn"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/createGroupBtn" />

    <Button
        android:text="Sub"
        android:textSize="12sp"
        android:layout_width="80dp"
        android:layout_height="45dp"
        android:id="@+id/subBtn"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/pubBtn" />

</RelativeLayout>
